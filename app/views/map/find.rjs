# -*- coding: utf-8 -*-
unless @message

  page << @map.clear_overlays
  @polygons.each do |poly|
    page << @map.add_overlay(poly)
  end
  page << @map.set_center(@center,@zoom)
  #notice = "#{@name} をゲット！"
else
  notice = @message
end
	
page.hide 'notice'

page.replace_html 'notice', notice
page.visual_effect :appear, 'notice', :duration => 0.5
